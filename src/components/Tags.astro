---
let { tags } = Astro.props;

if(tags === undefined) {
    const allPosts = Object.values(import.meta.glob('../pages/posts/*.md', { eager: true }));
    tags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];
}

---
<style>
    a {
        color: #00539F;
        text-decoration: none;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }
</style>

<div class="tags">
    {tags.map((tag: any) => (
            <p class="tag">
                <a href={`/tags/${tag}`}>{tag}</a>
            </p>
    ))}
</div>